<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.View.Activity.RegisterActivity">

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="160dp"/>
    <RelativeLayout
        android:background="@drawable/register"
        android:layout_marginTop="140dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="#001a66"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="ĐĂNG KÝ"
            android:textStyle="bold"
            android:textSize="23sp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/frame"
            android:layout_marginTop="80dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Họ và tên :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/full_name"
                android:layout_centerHorizontal="true"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/select"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="13sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_toRightOf="@id/frame"
            android:layout_marginTop="80dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Số điện thoại :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_marginTop="3dp"
                android:src="@drawable/vietnam"
                android:layout_marginStart="120dp"
                android:layout_width="24dp"
                android:layout_height="16dp"/>
            <TextView
                android:padding="3dp"
                android:background="@drawable/new_frame"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:text="+84"
                android:layout_marginTop="47dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginTop="40dp"
                android:singleLine="true"
                android:padding="10dp"
                android:textSize="13sp"
                android:textAlignment="textStart"
                android:id="@+id/phone"
                android:background="@drawable/select"
                android:layout_width="135dp"
                android:layout_marginStart="48dp"
                android:layout_height="40dp"/>
        </RelativeLayout>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/frame"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:text="Tên đăng nhập :"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:singleLine="true"
            android:textSize="13sp"
            android:padding="10dp"
            android:id="@+id/username"
            android:layout_below="@id/frame"
            android:background="@drawable/select"
            android:layout_marginStart="15dp"
            android:layout_marginTop="55dp"
            android:layout_width="368dp"
            android:layout_height="40dp"/>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_below="@id/username"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"

                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:text="Mật khẩu :"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:inputType="textPassword"
                android:layout_centerHorizontal="true"
                android:id="@+id/password"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/select"
                android:drawableRight="@drawable/baseline_remove_red_eye_24"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="13sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginStart="200dp"
           android:layout_below="@id/username"
           android:layout_width="200dp"
           android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:text="Xác nhận mật khẩu :"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:inputType="textPassword"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:textSize="13sp"
                android:padding="10dp"
                android:drawableRight="@drawable/baseline_remove_red_eye_24"
                android:id="@+id/again"
                android:background="@drawable/select"
                android:layout_marginStart="20dp"
                android:layout_marginTop="45dp"
                android:layout_width="175dp"
                android:layout_height="40dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="360dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:text="Gu âm nhạc :"
                android:textSize="15sp"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:background="@drawable/favourite"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:id="@+id/frame1"
                android:layout_width="170dp"
                android:layout_height="35dp">
                <TextView
                    android:paddingStart="3dp"
                    android:singleLine="true"
                    android:gravity="center"
                    android:id="@+id/favourite"
                    android:textSize="13sp"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_marginEnd="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/img_6"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginStart="200dp"
            android:layout_marginTop="370dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:text="Giới tính :"
                android:textSize="15sp"
                android:layout_height="wrap_content"/>
            <RadioGroup
                android:layout_marginEnd="30dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/male"
                    android:text="Nam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/female"
                    android:text="Nữ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RadioGroup>
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/button2"
            android:id="@+id/register"
            android:textColor="@color/white"
            android:text="Đăng Ký"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="500dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>