<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.View.NaviFragment.Pager2Fragment.AutomaticFragment">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        app:cardCornerRadius="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/faded"
            android:layout_width="300dp"
            android:layout_height="60dp">
            <TextView
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/text"
                android:text="Danh sách phát"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
   <androidx.core.widget.NestedScrollView
       android:layout_marginTop="10dp"
       android:id="@+id/nested"
       android:layout_below="@id/card"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <RelativeLayout
               android:id="@+id/relative"
               android:layout_marginStart="10dp"
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:textStyle="bold"
                   android:textSize="18sp"
                   android:text="Danh sách phát"
                   android:id="@+id/ds"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <androidx.recyclerview.widget.RecyclerView
                   android:layout_below="@id/ds"
                   android:layout_marginTop="20dp"
                   android:layout_width="match_parent"
                   android:id="@+id/recycle"
                   android:layout_height="wrap_content"/>
           </RelativeLayout>
           <RelativeLayout
               android:id="@+id/relative1"
               android:layout_marginStart="10dp"
               android:layout_marginTop="10dp"
               android:layout_below="@id/relative"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:textStyle="bold"
                   android:textSize="18sp"
                   android:text="Tự động phát"
                   android:id="@+id/td"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <androidx.recyclerview.widget.RecyclerView
                   android:layout_below="@id/td"
                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:id="@+id/recycle1"
                   android:layout_height="wrap_content"/>
           </RelativeLayout>
       </RelativeLayout>
   </androidx.core.widget.NestedScrollView>

</RelativeLayout>