<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.View.NaviFragment.Pager2Fragment.InforFragment">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
       <androidx.cardview.widget.CardView
           android:layout_marginTop="20dp"
           app:cardCornerRadius="10dp"
           android:id="@+id/card"
           android:layout_marginStart="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <RelativeLayout
               android:background="@drawable/faded"
               android:layout_width="350dp"
               android:layout_height="200dp">
               <RelativeLayout
                   android:id="@+id/relative"
                   android:layout_marginStart="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <androidx.cardview.widget.CardView
                       app:cardCornerRadius="5dp"
                       android:id="@+id/frame"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:scaleType="center"
                           android:id="@+id/image"
                           android:src="@drawable/baseline_account_circle_24"
                           android:layout_width="65dp"
                           android:layout_height="65dp"/>
                   </androidx.cardview.widget.CardView>

                   <TextView
                       android:singleLine="true"
                       android:textColor="@color/white"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       android:layout_marginTop="10dp"
                       android:text="Bai hat"
                       android:id="@+id/name"
                       android:ellipsize="marquee"
                       android:layout_marginStart="10dp"
                       android:layout_toRightOf="@id/frame"
                       android:layout_width="250dp"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:textSize="12sp"
                       android:layout_marginTop="5dp"
                       android:text="Bai hat"
                       android:id="@+id/singers"
                       android:layout_marginStart="10dp"
                       android:layout_below="@id/name"
                       android:layout_toRightOf="@id/frame"
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"/>
               </RelativeLayout>
               <ImageView
                   android:layout_below="@id/relative"
                   android:id="@+id/line"
                   android:layout_marginTop="10dp"
                   android:src="@drawable/line"
                   android:layout_width="500dp"
                   android:layout_height="wrap_content"/>
              <RelativeLayout
                  android:layout_marginTop="5dp"
                  android:layout_marginStart="10dp"
                  android:layout_below="@id/line"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <RelativeLayout
                      android:id="@+id/album"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
                      <TextView
                          android:textSize="13sp"
                          android:text="Album"
                          android:layout_width="100dp"
                          android:layout_height="wrap_content"/>
                      <TextView
                          android:id="@+id/album_name"
                          android:textSize="13sp"
                          android:text="ten"
                          android:textColor="@color/white"
                          android:layout_marginStart="100dp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>
                  </RelativeLayout>
                  <RelativeLayout
                      android:id="@+id/type"
                      android:layout_marginTop="10dp"
                      android:layout_below="@id/album"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
                      <TextView
                          android:textSize="13sp"
                          android:text="Thể loại"
                          android:layout_width="100dp"
                          android:layout_height="wrap_content"/>
                      <TextView
                          android:textColor="@color/white"
                          android:id="@+id/type_name"
                          android:textSize="13sp"
                          android:text="ten"
                          android:layout_marginStart="100dp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>
                  </RelativeLayout>
                  <RelativeLayout
                      android:id="@+id/day_launched"
                      android:layout_marginTop="10dp"
                      android:layout_below="@id/type"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
                      <TextView
                          android:textSize="13sp"
                          android:text="Phát hành"
                          android:layout_width="100dp"
                          android:layout_height="wrap_content"/>
                      <TextView
                          android:id="@+id/date"
                          android:textSize="13sp"
                          android:text="20/10/2025"
                          android:textColor="@color/white"
                          android:layout_marginStart="100dp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>
                  </RelativeLayout>

              </RelativeLayout>
           </RelativeLayout>
       </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="Có thể bạn muốn nghe"
            android:layout_marginTop="20dp"
            android:layout_below="@id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_below="@id/card"
            android:layout_marginTop="50dp"
            android:id="@+id/recycle"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_below="@id/recycle"
            android:layout_width="wrap_content"
            android:layout_height="100dp"/>
    </RelativeLayout>



</androidx.core.widget.NestedScrollView>