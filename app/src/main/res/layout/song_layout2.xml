<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/frame"
        app:cardCornerRadius="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="center"
            android:id="@+id/image"
            android:src="@drawable/baseline_account_circle_24"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@id/name"
        android:layout_marginTop="6dp"
        android:textStyle="bold"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Nothing gonna change my love for you"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/frame"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/singers"
        android:text="Nghệ sĩ"
        android:textSize="10sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="36dp"
        android:layout_toRightOf="@id/frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/cd"
        android:src="@drawable/cd"
        android:layout_marginStart="10dp"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@id/singers"
        android:layout_width="12dp"
        android:layout_height="12dp"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/add_to_play"
        android:layout_marginEnd="15dp"
        android:src="@drawable/add_to_play"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/more"
        android:layout_width="20dp"
        android:layout_height="20dp"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/like"
        android:layout_marginEnd="15dp"
        android:src="@drawable/heart"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/more"
        android:layout_width="20dp"
        android:layout_height="20dp"/>
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/more"
        android:layout_marginEnd="5dp"
        android:src="@drawable/more"
        android:layout_width="20dp"
        android:layout_height="17dp"/>
    <ImageView
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:id="@+id/on_list"
        android:layout_marginEnd="5dp"
        android:src="@drawable/on_list"
        android:layout_marginTop="17dp"
        android:layout_alignParentRight="true"
        android:layout_width="20dp"
        android:layout_height="20dp"/>



</RelativeLayout>